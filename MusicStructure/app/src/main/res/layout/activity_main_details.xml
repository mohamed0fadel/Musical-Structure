<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.musicstructure.MediaDetailsActivity">

    <ImageView
        android:id="@+id/det_img_artist_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:src="@drawable/demi"
        android:scaleType="centerCrop"
        android:layout_above="@id/action_buttons"/>


    <LinearLayout
        android:id="@+id/action_buttons"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:background="@color/colorPrimaryDark"
        android:paddingTop="@dimen/padding_top"
        android:paddingBottom="@dimen/padding_buttom"
        android:gravity="center"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/btn_home"
            style="@style/image_button"
            android:src="@drawable/home"/>

        <ImageButton
            android:id="@+id/btn_previous"
            style="@style/image_button"
            android:src="@android:drawable/ic_media_previous"/>

        <ImageButton
            android:id="@+id/btn_play"
            style="@style/image_button"
            android:src="@android:drawable/ic_media_play"/>

        <ImageButton
            android:id="@+id/btn_next"
            style="@style/image_button"
            android:src="@android:drawable/ic_media_next"/>
    </LinearLayout>

</LinearLayout>
